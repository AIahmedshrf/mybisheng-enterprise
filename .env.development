# ============================================
# Bisheng Enterprise - Development Environment
# ============================================

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bisheng_dev
POSTGRES_USER=bisheng_dev
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgresql://bisheng_dev:dev_password_123@localhost:5432/bisheng_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# MinIO
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=bisheng-dev

# Application
SECRET_KEY=dev-secret-key-not-for-production
ADMIN_EMAIL=dev@bisheng.local
ADMIN_PASSWORD=dev123456

# API Keys (add your own)
OPENAI_API_KEY=sk-your-dev-key
ANTHROPIC_API_KEY=sk-ant-your-dev-key

# Development Features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=true
ENABLE_HOT_RELOAD=true

# Disable SSL in development
SSL_ENABLED=false
VERIFY_SSL=false