{
  "dashboard": {
    "title": "Bisheng - Application Monitoring",
    "uid": "bisheng-app-monitoring",
    "tags": ["bisheng", "application", "api"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "15s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Error Rate"
        }
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Backend Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"bisheng-backend\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "RUNNING", "color": "green"},
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"}
            ]
          }
        }
      },
      {
        "id": 6,
        "title": "Frontend Status",
        "type": "stat",
        "gridPos": {"x": 8, "y": 16, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"bisheng-frontend\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "RUNNING", "color": "green"},
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"}
            ]
          }
        }
      },
      {
        "id": 7,
        "title": "Total Requests (24h)",
        "type": "stat",
        "gridPos": {"x": 16, "y": 16, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      }
    ]
  }
}
